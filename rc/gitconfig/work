[include]
	path = /Users/millerhall/.config/dev/gitconfig
[user]
	name = Miller Arlindo Hall
	email = miller.hall@shopify.com
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[color]
	ui = auto
[core]
	pager = delta
	commitGraph = true
    excludesFile = ~/.gitignore
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true  # use n and N to move between diff sections
[merge]
	conflictstyle = diff3
[diff]
	colorMoved = default
	algorithm = patience
	relative = true
[push]
	default = simple
    autoSetupRemote = true
[alias]
	la = log-all
	ll = log-all short
	ln = log-all short -n
	short = log --pretty=short
	when = log --pretty='%C(yellow)%h %Cblue%ad %Cgreen%an %Creset%<(50,trunc)%s' --date=short
	names = show --name-only --pretty=""
	dnames = diff --name-only --pretty=""
	adog = log --all --decorate --oneline --graph
	bdog = log --branches --decorate --oneline --graph
	root = rev-parse --show-toplevel
	stat = show --stat
	dstat = diff --stat
[init]
	defaultBranch = main
[rerere]
  enabled = true
